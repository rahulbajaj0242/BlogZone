<div class='row'>
  <section class='main col-md-9'>
    <article>
      <h2>{{data.post.title}}</h2>
      <img src='{{data.post.featureImage}}' alt='feature Image' style='width:100%' />
      <br /><br />

      {{#safeHTML data.post.body}}{{/safeHTML}}
      <br /><br />
      <strong>Category:</strong>
      {{data.post.category}}<br />
      <strong>Last Updated:</strong>
      {{data.post.postDate}}

    </article>
  </section>
  <aside class='col-md-3'>
    <br /><br />
    {{#if data.posts}}
      <h4>Posts</h4>

      <ul class='list-group'>
        {{#each data.posts}}
          <a href='/blog/{{postID}}?category={{../viewingCategory}}' class='list-group-item'>{{title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>

      <ul class='list-group'>
        {{#each data.categories}}
          <a href='/blog?category={{categoryID}}' class='list-group-item'>{{category}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>